{
  "passPerPreset": true,

  "plugins": [
    // HRM
    // http://gaearon.github.io/react-hot-loader/getstarted/
    "react-hot-loader/babel",

    // Imports schema.
    "./tools/babel/relay_plugin"
  ],

  "presets": [
    "react",
    "es2015",
    "stage-0"
  ],

  //
  // NOTE: Webpack and the React Native packager both use babel with different configs.
  // BABEL_ENV=webpack babel-node ./tools/babel/update_schema.js
  // https://babeljs.io/docs/usage/babelrc
  //
  "env": {
    "react-native": {
      "plugins": [
        "react-native"
      ],
      "presets": []
    },

    "server": {
      "plugins": [],
      "presets": [
        "es2015",
        "stage-0"
      ]
    }
  }
}
