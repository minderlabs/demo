{
  "Group": [
    {
      "id": "minderlabs",
      "title": "Minder Labs"
    }
  ],

  "Folder": [
    {
      "id": "inbox",
      "title": "Inbox",
      "filter": {
        "type": "Task",
        "expr": {
          "op": "OR",
          "expr": [
            { "field": "owner",     "ref": "$USER_ID" },
            { "field": "assignee",  "ref": "$USER_ID" }
          ]
        }
      }
    },
    {
      "id": "favorites",
      "title": "Favorites",
      "filter": {
        "labels": ["_favorite"]
      }
    },
    {
      "id": "projects",
      "title": "Projects",
      "filter": {
        "type": "Project"
      }
    },
    {
      "id": "deleted",
      "title": "Deleted",
      "filter": {
        "labels": ["_deleted"]
      }
    }
  ]
}
