{
  "Group": [
    {
      "id": "minderlabs",
      "title": "Minder Labs"
    }
  ],

  "Project": [
    {
      "id": "demo",
      "title": "Demo",
      "team": "minderlabs"
    }
  ],

  "Folder": [
    {
      "id": "folder_inbox",
      "alias": "inbox",
      "title": "Inbox",
      "filter": {
        "sort": {
          "field": "modified",
          "desc": true
        }
      }
    },
    {
      "id": "folder_tasks",
      "alias": "tasks",
      "title": "Tasks",
      "filter": {
        "type": "Task",
        "expr": {
          "op": "OR",
          "expr": [
            { "field": "owner", "ref": "$USER_ID" },
            { "field": "assignee", "ref": "$USER_ID" }
          ]
        }
      }
    },
    {
      "id": "folder_favorites",
      "alias": "favorites",
      "title": "Favorites",
      "filter": {
        "labels": ["_favorite"]
      }
    },
    {
      "id": "folder_projects",
      "alias": "projects",
      "title": "Projects",
      "filter": {
        "type": "Project"
      }
    },
    {
      "id": "folder_deleted",
      "alias": "deleted",
      "title": "Deleted",
      "filter": {
        "labels": ["_deleted"]
      }
    }
  ]
}
