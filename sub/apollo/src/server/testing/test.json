{
  "Group": [
    {
      "id": "minderlabs",
      "title": "Minder Labs"
    }
  ],

  "Project": [
    {
      "id": "demo",
      "title": "Demo",
      "team": "minderlabs"
    }
  ],

  "Folder": [
    {
      "id": "folder_inbox",
      "order": 1,
      "alias": "inbox",
      "title": "Inbox",
      "filter": {
        "matchAll": true,
        "expr": {
          "op": "AND",
          "expr": [
            {
              "comp": "NE",
              "field": "type",
              "value": {
                "string": "Folder"
              }
            },
            {
              "comp": "GT",
              "field": "modified",
              "value": {
                "timestamp": -100000
              }
            }
          ]
        },
        "orderBy": {
          "field": "modified",
          "order": "DESC"
        },
        "shouldAggregate": false
      }
    },
    {
      "id": "folder_tasks",
      "order": 2,
      "alias": "tasks",
      "title": "Tasks",
      "filter": {
        "type": "Task",
        "expr": {
          "op": "OR",
          "expr": [
            { "ref": "$USER_ID", "field": "owner" },
            { "ref": "$USER_ID", "field": "assignee" }
          ]
        },
        "shouldAggregate": false
      }
    },
    {
      "id": "folder_favorites",
      "order": 3,
      "alias": "favorites",
      "title": "Favorites",
      "filter": {
        "labels": ["_favorite"],
        "shouldAggregate": false
      }
    },
    {
      "id": "folder_projects",
      "order": 4,
      "alias": "projects",
      "title": "Projects",
      "filter": {
        "type": "Project",
        "shouldAggregate": false
      }
    },
    {
      "id": "folder_deleted",
      "order": 5,
      "alias": "deleted",
      "title": "Deleted",
      "filter": {
        "labels": ["_deleted"],
        "shouldAggregate": false
      }
    }
  ]
}
