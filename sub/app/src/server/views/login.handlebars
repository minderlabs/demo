{{#section 'head'}}
  <script src="/assets/website.bundle.js"></script>
  <script>
    // TODO(burdon): Transpile for non-Chrome.
    let auth = new Auth();
    let promise = ({{ force }}) ? auth.logout() : Promise.resolve();
    promise.then(() => {
      console.log('Authenticating...');
      auth.login().then(user => {
        console.log('Authenticated: ' + JSON.stringify(_.pick(user, ['id', 'email', 'active'])));
        if (user && user.active) {
          document.location.href = '/home';
        } else {
          // TODO(burdon): Show waitlist page.
          document.location.href = '/user/logout';
        }
      });
    });
  </script>
{{/section}}
